#!/usr/bin/env bash
# Performing redirections

apt-get update
apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
sudo chmod -R 755 /var/www
echo "Hello World!" | sudo tee /var/www/html/index.html
SERVER_CONFIG="/listen 80 default_server;/a rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
sudo sed -i '$SERVER_CONFIG/' /etc/nginx/sites-enabled/default
sudo service nginx restart
